{% extends "base.html.twig" %}

{% block title %}
    World of Shoua | Profil
{% endblock %}

{% block body %}
    
    <h1 class="text-center">Vos données personnelles</h1>

    {% if user.roles.0 == 'ROLE_ADMIN' %}
        <p class="text-center text-secondary mb-4">Vous êtes <span class="text-primary">ADMINISTRATEUR</span>  du site</p>
    {% endif %}

    <div class="d-flex justify-content-around">
        <div class="row">
            <div class="col-sm-6">
                <div class="card border-secondary">
                    <div class="card-body">
                        <h4 class="text-center my-3">Votre Profil</h4>
                        <div class="d-flex justify-content-between">
                            <p class="card-text">Email :</p>
                            <p class="card-text">{{user.email}}</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <p class="card-text">Pseudo :</p>
                            <p class="card-text">{{user.pseudo}}</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <p class="card-text">Nom :</p>
                            <p class="card-text">{{user.nom}}</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <p class="card-text">Prénom :</p>
                            <p class="card-text">{{user.prenom}}</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <p class="card-text">Sexe :</p>
                            <p class="card-text">{{user.sexe}}</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <p class="card-text">Téléphone :</p>
                            <p class="card-text">{{user.telephone}}</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <p class="card-text">Adresse :</p>
                            <p class="card-text">{{user.adresse}}</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <p class="card-text">Ville :</p>
                            <p class="card-text">{{user.ville}}</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <p class="card-text">Code Postale :</p>
                            <p class="card-text">{{user.codePostal}}</p>
                        </div>
                        <div class="text-center">
                            <a href="?op=modif" class="btn btn-outline-secondary px-5 text-center my-3">Modifier</a>
                        </div>
                    </div>
                </div>
            </div>

            {% if app.request.query.get('op') == 'modif' %}

            <div class="col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <h4 class="text-center my-3">Votre Profil</h4>
                        <div class="d-flex justify-content-between">
                            <p class="card-text">Email :</p>
                            <p class="card-text">{{user.email}}</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <p class="card-text">Pseudo :</p>
                            <p class="card-text">{{user.pseudo}}</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <p class="card-text">Nom :</p>
                            <p class="card-text">{{user.nom}}</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <p class="card-text">Prénom :</p>
                            <p class="card-text">{{user.prenom}}</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <p class="card-text">Sexe :</p>
                            <p class="card-text">{{user.sexe}}</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <p class="card-text">Téléphone :</p>
                            <p class="card-text">{{user.telephone}}</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <p class="card-text">Adresse :</p>
                            <p class="card-text">{{user.adresse}}</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <p class="card-text">Ville :</p>
                            <p class="card-text">{{user.ville}}</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <p class="card-text">Code Postale :</p>
                            <p class="card-text">{{user.codePostal}}</p>
                        </div>
                        <div class="text-center">
                            <a href="?op=modif" class="btn btn-outline-secondary px-5 text-center my-3">Modifier</a>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}

        </div>
    </div>

    

    

{% endblock %}