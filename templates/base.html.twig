<html lang="fr" class="h-100">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="Ma Boutique e-commerce">
        <meta name="author" content="Yassir">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
        <meta name="theme-color" content="#7952b3">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <title>
        {% block title %}{% endblock %}
        </title>
        <link href="{{ asset('CSS/shop.css') }}" rel="stylesheet">
    </head>
    <body>
        <header class="">
            <nav class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-1 navbar navbar-dark bg-dark fixed-top">
                <a href="{{ path('home') }}" class="nav-link px-2 me-2 text-white"><img src="{{ asset('uploads/photos/logo_white_large.png') }}" alt="logo" style="height: 30px;"></a>
                {% if app.user %}                    
                    <a class="nav-link text-light ms-1" href="{{ path('app_profil') }}" title="Acces a votre compte">Bonjour <strong class="coul">{{ app.user.prenom }} {{ app.user.nom}}</strong></a>
                    <a href="/" class="d-flex align-items-center mb-2 mb-md-0 text-dark text-decoration-none"></a>
                {% else %}
                    <a href="/" class="d-flex align-items-center col-md-2 mb-2 mb-md-0 text-dark text-decoration-none"></a>
                {% endif %}
                <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
                    <li class="nav-link nav-link-ltr"><a href="{{ path('home') }}" class="nav-link me-2 text-white">Home</a></li>
                    <li class="nav-link nav-link-ltr"><a href="{{ path('shop') }}" class="nav-link text-white">Shop</a></li>
                    <li class="nav-link nav-link-ltr"><a href="#" class="nav-link text-white">Contact</a></li>
                    <li class="nav-link nav-link-ltr"><a href="{{ path('panier') }}" class="nav-link text-white">Panier <i class="bi bi-cart4"></i></a></li>
                </ul>

                <div class="col-md-3 col-sd-1 text-end me-3">
                    {% if app.user %} 
                        {% if is_granted('ROLE_ADMIN') %}
                            <a type="button" href="{{ path('app_admin') }}" class="btn btn-sm hova me-2 border-dark">BackOffice</a>
                        {% endif %}
                        <a type="button" href="{{ path('app_logout') }}" class="btn btn-sm hovab border-dark">Déconnexion</a>
                    {% else %}
                        <a type="button" href="{{ path('app_login') }}" class="btn btn-sm hova me-2 border-dark">Connexion</a>
                        <a type="button" href="{{ path('app_register') }}" class="btn btn-sm hovab border-dark">Inscription</a>
                    {% endif %}
                </div>
            </nav>
        </header>
        <main style="min-height : 740px;">
        <br><br><br>
            {% block body %}
                
            {% endblock %}   
        </main>
        <footer class="bg-dark">
            <div class="pb-3">
                <ul class="nav justify-content-center border-bottom mb-3">
                    <li class="nav-link nav-link-ltr"><a href="{{ path('home') }}" class="nav-link px-2 me-2 text-white"><img src="{{ asset('uploads/photos/logo_small_icon_only_inverted.png') }}" alt="logo" style="height: 30px;"></a></li>
                    <li class="nav-link nav-link-ltr"><a href="#" class="nav-link px-2 text-white">Features</a></li>
                    <li class="nav-link nav-link-ltr"><a href="#" class="nav-link px-2 text-white">Pricing</a></li>
                    <li class="nav-link nav-link-ltr"><a href="#" class="nav-link px-2 text-white">FAQs</a></li>
                    <li class="nav-link nav-link-ltr"><a href="#" class="nav-link px-2 text-white">About</a></li>
                </ul>
                <p class="text-center text-muted">© 2021 SYYR & Corp, Inc</p>
            </div>
        </footer>
        
        {% block javascripts %}
    
        {% endblock %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <script type="text/javascript" language="javascript" src="https://code.jquery.com/jquery-3.5.1.js"></script>
    </body>
</html>

