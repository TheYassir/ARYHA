{% extends "base_admin.html.twig" %}
{% block title %}
    Admin | 
 {% if editMode %}    
        Modification du Code Promo
    {% else %}        
        New Code Promo
    {% endif %}

{% endblock %}
{% block body %}

<div class="rounded my-5 align-self-center">
    <div class="col-7 mx-auto my-5">
        {{ form_start(formCode) }}
        <div class="card text-center border-dark">
            <div class="card-header border-dark">
                <h1 class="h4 text-center my-2">
                {% if editMode %}    
                    Modification du Code Promo
                {% else %}        
                    Ajouter un Code promo
                {% endif %}</h1> 
            </div>
            <div class="card-body border-dark">
                <p class="card-text">{{ form_row(formCode.code) }}</p>
                <p class="card-text">{{ form_row(formCode.promo) }}</p>
            </div>
            <div class="card-footer text-muted border-dark">
                <div class="text-center">
                    <button type="submit" class="btn btn-outline-dark col-3">                
                    {% if editMode %}    
                        Enregistrer
                    {% else %}
                        Envoyer
                    {% endif %}                
                    </button>
                </div>  
            </div>
        </div>
        {{ form_end(formCode) }}
    </div>  

</div>
{% endblock %}