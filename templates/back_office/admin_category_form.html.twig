{% extends "base_admin.html.twig" %}
{% block title %}

    Admin | 

 {% if editMode %}    
        Modification de la category
    {% else %}        
        Nouvelle Category
    {% endif %}

{% endblock %}

{% block body %}

    <form>
        <input type="button" class="btn btn-outline-secondary" value="Retour" onclick="history.go(-1)">
    </form>
    <div class="rounded my-5">
        <div class="col-7 mx-auto my-5">
            {{ form_start(formCat) }}
                <div class="card text-center border-warning">
                    <div class="card-header border-warning">
                        <h1 class="h4 text-center my-2">
                            {% if editMode %}    
                                Modification de la category
                            {% else %}        
                                Ajouter une nouvelle category
                            {% endif %}
                        </h1> 
                    </div>
                    <div class="card-body border-warning">
                        <p class="card-text">{{ form_row(formCat.titre) }}</p>
                        <p class="card-text">{{ form_row(formCat.grdCat) }}</p>
                        <p class="card-text">{{ form_row(formCat.sexe) }}</p>
                    </div>
                    <div class="card-footer text-muted border-warning">
                        <div class="text-center">
                            <button type="submit" class="btn btn-outline-warning col-3">                
                                {% if editMode %}    
                                    Enregistrer
                                {% else %}
                                    Envoyer
                                {% endif %}                
                            </button>
                        </div>  
                    </div>
                </div>
            {{ form_end(formCat) }}
        </div>  
    </div>

    
{% endblock %}