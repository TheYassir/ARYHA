{% extends "base_admin.html.twig" %}

{% block title %}

    Admin | 

 {% if editMode %}    
        Modification de l'article
    {% else %}        
        Nouvel article
    {% endif %}

{% endblock %}

{% block body %}

<div class="ajout-article-admin rounded">
<form>
  <input type="button" class="btn btn-outline-secondary" value="Retour" onclick="history.go(-1)">
</form>
    <h1 class="text-center my-5">Ajouter un nouvel article :</h1> 

    <div class="col-7 mx-auto mb-5">
        {{ form_start(formArticle) }}

        {{ form_row(formArticle.titre) }}

        <div class="d-flex col-12 justify-content-between my-2">
            <div class="col-5">
                {{ form_row(formArticle.category) }}
            </div>
            <div class="col-5">
                {{ form_row(formArticle.couleur) }}
            </div>
        </div>

        {{ form_row(formArticle.description) }}
        

        <div class="d-flex col-12 justify-content-between my-2">
            <div class="col-4">
                {{ form_row(formArticle.prix) }}
            </div>
            <div class="col-5">
                {# {{ form_row(formArticle.stock) }} #}
                {{ form_row(formArticle.photo) }}
                
            </div>
        </div>

        {# {{ form_row(formArticle.taille) }} #}
        {# {% if editMode %}
        
        {% else %}
            
        {% endif %} #}
        {# {{ form_row(formArticle.stock) }} #}


        {% if photoActuelle %}

        {# Si photoActuelle retourne TRUE, cela veut dire que l'article poss√®de une photo, c'est une modification, alors on entre dans la condition IF et on affiche la photoactuelle de l'article #}
        <em>Vous pouvez mettre une autre photo si vous souhaitez la modifier</em>
        <P class="col-12 d-flex justify-content-around">
            <img src="{{ asset('uploads/photos/' ~ photoActuelle) }}" alt="" class="img-responsive my-2" style="width: 200px; height: 200px;">
        </p>
            
        {% endif %}

            <div class="text-center my-5">
                <button type="submit" class="btn btn-primary col-3">                
                {% if editMode %}    
                    Enregistrer
                {% else %}
                    Envoyer
                {% endif %}                
                </button>
            </div>
        {{ form_end(formArticle) }}
    </div>  

</div>

</div>
    
{% endblock %}