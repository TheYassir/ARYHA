{% extends "base_admin.html.twig" %}

{% block title %}

    Admin | 

    {% if editMode %}    
        Modification de l'article
    {% else %}        
        Nouvel article
    {% endif %}

{% endblock %}

{% block body %}

<div class="ajout-article-admin rounded">
<form>
  <input type="button" class="btn btn-outline-secondary" value="Retour" onclick="history.go(-1)">
</form>
    <h1 class="text-center my-5">Ajouter un nouvel article :</h1> 

    <div class="col-7 mx-auto mb-5">
        {{ form_start(formArticle) }}

        {{ form_row(formArticle.titre) }}

        <div class="d-flex col-12 justify-content-between my-2">
            <div class="col-5">
                {{ form_row(formArticle.category) }}
            </div>
            <div class="col-5">
                {{ form_row(formArticle.couleur) }}
            </div>
        </div>

        {{ form_row(formArticle.description) }}
        
        <div class="d-flex col-12 justify-content-between my-2">
            <div class="col-5">
                {{ form_row(formArticle.photo) }}
                {{ form_row(formArticle.photo3) }}
                {{ form_row(formArticle.photo5) }}
            </div>
            <div class="col-5">
                {{ form_row(formArticle.photo2) }}
                {{ form_row(formArticle.photo4) }}
                {{ form_row(formArticle.photo6) }}
                
            </div>
        </div>

        <div class="d-flex col-12 justify-content-between my-2">
            <div class="col-5">
                {{ form_row(formArticle.prix) }}
            </div>
            <div class="col-5">
                
                
            </div>
        </div>
        {% if editMode %}    
            <em>Vous pouvez mettre une autre photo si vous souhaitez la modifier</em>
        {% endif %}
        <p class="col-12 d-flex justify-content-between">
            {% if photoActuelle %}
                1<img src="{{ asset('uploads/photos/' ~ photoActuelle) }}" alt="" class="img-responsive my-2" style="width: 30%;">
            {% endif %}
            {% if photoActuelle2 %}
                2<img src="{{ asset('uploads/photos/' ~ photoActuelle2) }}" alt="" class="img-responsive my-2" style="width: 30%;">
            {% endif %}
            {% if photoActuelle3 %}
                3<img src="{{ asset('uploads/photos/' ~ photoActuelle3) }}" alt="" class="img-responsive my-2" style="width: 30%;">
            {% endif %}
        </p>
        <p class="col-12 d-flex justify-content-between">
            {% if photoActuelle4 %}
                4<img src="{{ asset('uploads/photos/' ~ photoActuelle4) }}" alt="" class="img-responsive my-2" style="width: 30%;">
            {% endif %}
            {% if photoActuelle5 %}
                5<img src="{{ asset('uploads/photos/' ~ photoActuelle5) }}" alt="" class="img-responsive my-2" style="width: 30%;">
            {% endif %}
            {% if photoActuelle6 %}
                6<img src="{{ asset('uploads/photos/' ~ photoActuelle6) }}" alt="" class="img-responsive my-2" style="width: 30%;">
            {% endif %}
        </p>

            <div class="text-center my-5">
                <button type="submit" class="btn btn-primary col-3">                
                {% if editMode %}    
                    Enregistrer
                {% else %}
                    Envoyer
                {% endif %}                
                </button>
            </div>
        {{ form_end(formArticle) }}
    </div>  

</div>

</div>
    
{% endblock %}