{% extends "base_admin.html.twig" %}

{% block title %}
    Admin | Modification Etat
{% endblock %}
{% block body %}
<form>
  <input type="button" class="btn btn-outline-secondary" value="Retour" onclick="history.go(-1)">
</form>
{{ form_start(formEtatCom) }}
    <div class="card text-center my-5 col-10 mx-auto border-secondary">
        <div class="card-header border-secondary"><h1 class="h4 text-center m-2">Modification de l'état de la commande n°{{commande.id}}</h1> </div>
        <div class="card-body">
            <h5 class="card-title">Toute les informations de la commande</h5>
            <div class="d-flex justify-content-around my-3">
                <p class="card-text">Date de la commande :</p>
                <p class="card-text">Le {{ commande.date|date("d/m/Y") }} à {{commande.date|date('H:i:s') }} </p>
            </div>
            <div class="d-flex justify-content-around my-3">
                <p class="card-text my-auto">Infos Utilisateur :</p>
                <p class="card-text">{{ commande.user.nom }} <br> {{ commande.user.prenom }} <br> {{ commande.user.email }}</p>
            </div>
            <div class="d-flex justify-content-around my-3">
                <p class="card-text my-auto">Infos Article :</p>
                    {% for det in detailCommande %}
                        {% if commande.id == det.commande.id %}
                            <p class="card-text">{{ det.article.titre }} <br> Au prix de {{ det.prix }} € / article <br></p>
                        {% endif %}
                    {% endfor %}
            </div>
            <div class="d-flex justify-content-around my-3 col-12">
                <div class="card-text my-auto col-3">Etat de la commande :</div>
                <div class="card-text my-auto col-3">{{ form_row(formEtatCom.etat) }}</div>
            </div>

        </div>
        <div class="card-footer text-muted border-secondary"><button type="submit" class="btn btn-outline-secondary col-3">Modifier</button></div>
    </div>
{{ form_end(formEtatCom) }}
{% endblock %}